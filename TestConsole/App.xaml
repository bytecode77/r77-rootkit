<Application
	x:Class="TestConsole.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:TestConsole"
	xmlns:ui="http://schemas.bytecode77.com/2023/xaml/presentation"
	xmlns:cui="http://schemas.bytecode77.com/2025/xaml/cui"
	StartupUri="Windows/MainWindow/MainWindow.xaml" ShutdownMode="OnMainWindowClose" Startup="Application_Startup" DispatcherUnhandledException="Application_DispatcherUnhandledException">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/BytecodeApi.Wpf.Cui;component/Themes/Controls.xaml" />
				<ResourceDictionary Source="/TestConsole;component/Controls/LoadingOverlay.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<Style TargetType="{x:Type cui:UiSvgImage}">
				<Setter Property="Stretch" Value="None" />
				<Setter Property="HorizontalContentAlignment" Value="Center" />
				<Setter Property="VerticalContentAlignment" Value="Center" />
				<Setter Property="Width" Value="16" />
				<Setter Property="Height" Value="16" />
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>